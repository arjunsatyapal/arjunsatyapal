<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    /* Add CSS here. See the GWT docs on UI Binder for more details */
    .important {
      font-weight: bold;
    }
  </ui:style>
  <g:LayoutPanel width="100%" height="100%">
    <g:layer left="0px" width="275px" top="0px" height="66px">
        <g:Image url="lantern_logo.png"/>
    </g:layer>
    <g:layer width="262px" top="0px" height="33px" right="0px">
      <g:MenuBar ui:field="menuBar">
      	<g:MenuItem text="Login" ui:field="menuItemLogin"/>
        <g:MenuItem text="Student" ui:field="menuStudent">
          <g:MenuBar vertical="true">
            <g:MenuItem text="Login" />
          </g:MenuBar>
        </g:MenuItem>
        <g:MenuItem text="NonStudent" ui:field="menuNonStudent">
          <g:MenuBar vertical="true">
            <g:MenuItem text="Teacher" ui:field="menuItemTeacher" />
            <g:MenuItem text="Content Owner" ui:field="menuItemContentOwner" />
            <g:MenuItem text="Admin" ui:field="menuItemAdmin" />
          </g:MenuBar>
        </g:MenuItem>
      </g:MenuBar>
    </g:layer>
    
  </g:LayoutPanel>
</ui:UiBinder> 