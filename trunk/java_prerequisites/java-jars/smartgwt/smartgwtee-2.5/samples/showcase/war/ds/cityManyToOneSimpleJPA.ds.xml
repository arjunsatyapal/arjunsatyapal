<DataSource
    ID="cityManyToOneSimpleJPA"
    serverConstructor="com.isomorphic.jpa.JPA2DataSource"
    beanClassName="com.smartgwt.sample.showcase.server.CityManyToOneSimple"
    schemaBean="com.smartgwt.sample.showcase.server.CityManyToOneSimple"
>
    <fields>
        <field name="countryName"   type="text"     hidden="true"   valueXPath="country/countryName"/>
        <field name="country"       title="Country" canEdit="true"  displayField="countryName"
                foreignKey="countryManyToOneSimpleJPA.countryId"
        />
    </fields>
</DataSource>
