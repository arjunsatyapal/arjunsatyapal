<DataSource
    ID="city_DataSource"
    serverConstructor="com.isomorphic.jpa.JPADataSource"
    beanClassName="com.smartgwt.sample.server.City"
    >
    <fields>
        <field name="cityId"    type="sequence" hidden="true"   primaryKey="true" />
        <field name="cityName"  type="text"     title="City"    required="true"   />
