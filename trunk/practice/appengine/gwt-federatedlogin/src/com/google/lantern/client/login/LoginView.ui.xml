<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:image field='logo' src='../resources/lantern_logo.png' />
  <ui:image field='aol_logo' src='../resources/aol_logo.png' />
  <ui:image field='facebook_logo' src='../resources/facebook_logo.jpg' />
  <ui:image field='google_logo' src='../resources/google_logo.png' />
  <ui:image field='myopenid_logo' src='../resources/myopenid_logo.png' />
  <ui:image field='twitter_logo' src='../resources/twitter_logo.png' />
  <ui:image field='yahoo_logo' src='../resources/yahoo_logo.png' />

  <ui:style>
    @sprite .logo {
      gwt-image: 'logo';
      position: absolute;
      clear: both;
      height: 35%;
      width: 35;
    }
    
    .what-to-do {
      margin-top: 200px;
      font-size: 1.8em;
    }
    
    .providers {
      margin: 50px 20px;
    }
    
    .provider-button {
      float: left;
      margin : 120px 40px;
    }
    
    .pushbutton {
      
    }
  </ui:style>

  <g:HTMLPanel>
    <div class='{style.logo}' />
    <div class='{style.what-to-do}'>Login with one of the following providers.</div>

      <div class='{style.provider-button}'>
        <g:PushButton ui:field='aolButton' width='120px' height='40px'>
          <g:upFace image='{aol_logo}' />
        </g:PushButton>
      </div>

      <div class='{style.provider-button}'>
        <g:PushButton ui:field='facebookButton' width='120px'
          height='40px'>
          <g:upFace image='{facebook_logo}' />
        </g:PushButton>
      </div>

      <div class='{style.provider-button}'>
        <g:PushButton ui:field='googleButton' width='120px' height='40px'>
          <g:upFace image='{google_logo}' />
        </g:PushButton>
      </div>

      <div class='{style.provider-button}'>
        <g:PushButton ui:field='myopenidButton' width='120px'
          height='40px'>
          <g:upFace image='{myopenid_logo}' />
        </g:PushButton>
      </div>

      <div class='{style.provider-button}'>
        <g:PushButton ui:field='twitterButton' width='120px'
          height='40px'>
          <g:upFace image='{twitter_logo}' />
        </g:PushButton>
      </div>

      <div class='{style.provider-button}'>
        <g:PushButton ui:field='yahooButton' width='120px' height='40px'>
          <g:upFace image='{yahoo_logo}' />
        </g:PushButton>
      </div>
  </g:HTMLPanel>
</ui:UiBinder> 
